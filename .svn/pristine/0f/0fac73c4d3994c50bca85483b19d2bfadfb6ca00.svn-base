    private void desenharJogada() {

        // Mudando Jogador de posição
        panelJogador.setLocation(panelJogador.getX() - 10, 80);
        tragetoria.getGraphics().clearRect(0, 0, 1000, 1000);
        doLayout();

        tragetoria = new JLabel();

        tragetoria.setVisible(true);
        tragetoria.setBounds(0, 0, 500, 500);
        panelCampo.add(tragetoria);

  //      for (int i = 0; i < 360; i++) {
        //      desenharTragetoria(i, sliderForca.getValue());
        //  }
        desenharTragetoria(sliderAngulo.getValue(), sliderForca.getValue());

        new GraficoObjetoEmCampo(panelJogador, "ronaldinho-gaucho.jpg");
        new GraficoObjetoEmCampo(panelBola, "bola.jpg");
        new GraficoObjetoEmCampo(panelRede, "redes.jpg");

        doLayout();

    }

    private void desenharTragetoria(int pAngulo, int pForca) {

        // Desenha uma string no JLabel
        int x1 = panelJogador.getX(); // coordenada inicial x
        int y1 = panelJogador.getY() + panelJogador.getHeight(); // coordenada inicial y
        int ang = pAngulo; // ângulo
        int comp = pForca; // comprimento
        System.out.println("Angulo" + pAngulo);
        System.out.println("forca" + pForca);
        // coordenada x final
        int x2 = (int) (x1
                - Math.cos(ang / 180.0 * Math.PI) * comp);
        // coordenada y final
        int y2 = (int) (y1
                + Math.sin(ang / 180.0 * Math.PI) * comp);

        int x3 = x1 + pForca * (int) Math.cos(Math.toRadians(ang * Math.PI));
        int y3 = y1 + pForca * (int) Math.sin(Math.toRadians(ang * Math.PI));

        int dif = x2 - x1;
        System.out.println("dif:" + dif + "|x1:" + x1 + "|x2:" + x2);
        // x2 = x1 + dif;
        System.out.println("X2=" + x2);
        Graphics graphics = tragetoria.getGraphics();

        graphics.drawLine(x1, y1, x2, y2);
        System.out.println("Posicoes Antigas:" + x1 + "-" + y1 + "novas posicoes" + "-" + x2 + "-" + y2);
        System.out.println("Posicoes Antigas:" + x1 + "-" + y1 + "novas posicoes" + "-" + x3 + "-" + y3);
        tragetoria.doLayout();
        doLayout();

    }

