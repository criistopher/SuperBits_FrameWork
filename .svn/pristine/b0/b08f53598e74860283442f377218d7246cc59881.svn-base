package com.super_bits.modulosSB.SBCore.UtilGeral;

import javax.swing.JFrame;
import javax.swing.JOptionPane;

/**
 *
 * @author Salvio
 */
public class UTILSBCoreDesktopApp {

    static class EnviaMensagemThread implements Runnable {

        String mensagem;

        public EnviaMensagemThread(String pMensagem) {
            mensagem = pMensagem;
        }

        @Override
        public void run() {
            System.out.println("..");
            JFrame janela = new JFrame("teste");
            janela.setVisible(true);
            JOptionPane.showMessageDialog(new JFrame("teste"), mensagem);
        }

    }

    public static void showMessage(String pMensagem) {
        new Thread(new EnviaMensagemThread(pMensagem)).start();
    }

    public static void showMessageStopProcess(String pMensagem) {
        System.out.println("MENSAGEM USU√ÅRIO:" + pMensagem + pMensagem);

        JFrame janela = new JFrame("teste");
        janela.setVisible(true);
        JOptionPane.showMessageDialog(new JFrame("teste"), pMensagem);

    }

}
